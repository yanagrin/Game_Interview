<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".secondActivity"
    android:orientation="vertical"
    android:background="#c8a99e">
    <TextView
        android:id="@+id/TV"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:layout_margin="5dp"
        android:textSize="22dp"
        android:textColor="#660066"
        android:text="К какому кадровику вы сядете?">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/kadrovik1" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/kadrovik2" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp">
        <Button
            android:id="@+id/BT1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="1"
            android:textSize="15dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:backgroundTint="#8c4566">
            ></Button>
        <Button
            android:id="@+id/BT2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="2"
            android:textSize="15dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:backgroundTint="#8c4566">
            ></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="25dp">
        <Button
            android:id="@+id/BACK"
            android:textSize="15dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Назад"
            android:backgroundTint="#ee9086">
        </Button>

    </LinearLayout>

</LinearLayout>
